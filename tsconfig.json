{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "lib": ["dom", "es2017"],
    "sourceMap": true,
    "outDir": "./lib",
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "./types"
    ]
  },
  "include": ["src/**/*", "types/**/*"],
  "exclude": ["node_modules", "__tests__", "**/*.spec.ts", "**/*.test.ts", "**/__mocks__", "**/__stubs__"]
}